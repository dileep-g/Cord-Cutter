<h1 class="title">Packages</h1>
<div style="margin-bottom: 20px">
  <%= link_to 'New Package', new_package_path %>
  <br>
  <%= link_to 'New Hierarchical Package', select_origin_path %>
</div>
<table width=100%>
  <thead>
    <tr class="show-list">
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr class="show-list">
        <td width=40%><%= package.name %></td>
        <td width=20%><%= link_to 'Show', package %></td>
        <td width=20%><%= link_to 'Edit', edit_package_path(package) %></td>
        <td width=20%><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= will_paginate %>

